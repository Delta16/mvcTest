<!DOCTYPE html>
<html id="@ViewBag.PageID">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" id="stylesheet" />
    <script src="@Url.Content("~/Scripts/CoreDesign/Persistence.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/CoreDesign/Styles.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>

<body onload="return Load();">
<div id="Container">
	<div id="Logo">
		<div id="LogoText" style="left: 132px; top: 46px">
			<h1>Core Design</h1>
			<h3><em>Website Design and Development Services</em></h3>
		</div>
		
		<form name="StyleForm" action="#" onsubmit="return false;" id="StyleForm">
			<label id="label1">Style :</label>
			
			<select name="colour" onchange="return ChangeStyle('');">
				<option value="style1">Select a style</option>
				<option value="style1">Default</option>
				<option value="style2">Red Theme</option>
	
			</select>
		</form>
		
	</div>
	<div id="Navigation">
		<ul>
			<li><a href="/Home/Index" class="home">Home</a></li>
			<li><a href="/Home/About" class="about">About Us</a></li>
			<li><a href="/Home/Services" class="services">Services</a></li>
			<li><a href="/Home/Clients" class="clients">Clients</a></li>
			<li><a href="/Home/Contact" class="contact">Contact Us</a></li>
            <li><a href="/Home/Account" class="account">Login/ Register</a></li>
		</ul>
	</div>
	<div id="Content">
         @RenderBody()
	</div>
	<div id="Footer">
		<h6><em>Copyright &copy; 2011 Core Design</em></h6>
	</div>
</div>
</body>
   

</html>
